{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>{{ 'label.created_at'|trans }}</th>
                <td>{{ tag.createdAt ? tag.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'label.updated_at'|trans }}</th>
                <td>{{ tag.updatedAt ? tag.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'label.tag'|trans }}</th>
                <td>{{ tag.title }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" role="button" href="{{ url('app_tag_index') }}" title="{{ 'action.back_to_list'|trans }}">
        {{ 'action.back_to_list'|trans }}
    </a>

    <br>
    <br>

    <a class="btn btn-primary" role="button"href="{{ url('app_tag_edit', {id: tag.id}) }}" title="{{ 'action.edit'|trans }}">
        {{ 'action.edit'|trans }} </a>

    <br>
    <br>

    {{ include('tag/_delete_form.html.twig') }}
{% endblock %}
