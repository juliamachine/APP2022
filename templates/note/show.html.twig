{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
    <h1>Note</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ note.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ note.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ note.createdAt ? note.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ note.updatedAt ? note.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" role="button" href="{{ url('app_note_index') }}" title="{{ 'action.back_to_list'|trans }}">
        {{ 'action.back_to_list'|trans }}
    </a> <br> <br>

    <a class="btn btn-primary" role="button"href="{{ url('app_note_edit', {id: note.id}) }}" title="{{ 'action.edit'|trans }}">
        {{ 'action.edit'|trans }} </a>
    <br>
    <br>
    {{ include('note/_delete_form.html.twig') }}
{% endblock %}
